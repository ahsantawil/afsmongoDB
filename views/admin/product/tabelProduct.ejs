<div class="card shadow mb-4">
    <div class="card-header py-3">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addProduct">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Nama Produk</th>
                        <th>Tipe Produk</th>
                        <th>Specification</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i< product.length; i++ ) { %>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><%= product[i].name_product %></td>
                        <td><%= product[i].type_product %></td>
                        <td><%= product[i].spec_product %></td>
                        <td><%= product[i].desc_product %></td>
                        <td>
                            <form action="/admin/product/<%=product[i].id%>?_method=DELETE" method="POST">
                                <a href="javascript:void()" type="button" class="btn btn-info btn-sm button-update"
                                    data-id="<%= product[i].id %>" 
                                    data-name_product="<%= product[i].name_product %>"
                                    data-type_product="<%= product[i].type_product %>"
                                    data-spec_product="<%= product[i].spec_product %>"
                                    data-desc_product="<%= product[i].desc_product %>">
                                    <i class="fas fa-edit"></i> </a>
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
