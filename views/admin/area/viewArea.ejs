<script>
    $(document).ready( function () {
        $('#dataTables').DataTable();
    });

    $('#dataTable').on('click', '.button-update', function(){
        let id = $(this).data('id');
        let area = $(this).data('area');
        let uiw = $(this).data('uiw');
        $('#editArea').modal('show');
        $('.id').val(id);
        $('.area').val(area);
        $('.uiw').val(uiw);
    });

</script>