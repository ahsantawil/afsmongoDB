<div class="row">
    <div class="col-lg-12">
        <form action="" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6 ">
                    <label for="uiw">UIW/UID</label>
                    <select name="uiw" id="uiw" class="form-control">
                        <option value="">DISBANTEN</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="area">Area</label>
                    <select name="area" id="area" class="form-control">
                        <option value="">CIKOKOL</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="spb">SPB</label>
                    <input id="spb" name="spb" type="text" class="form-control" placeholder="Masukan Nomor SPB" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="qty">Jumlah Pengiriman</label>
                    <input type="number" class="form-control" name="qty" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="tgl_kirim">Tanggal Pengiriman</label>
                    <input type="date" class="form-control" name="tgl_kirim" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="garansi">Garansi</label>
                    <select name="garansi" id="garansi" class="form-control">
                        <option value="">1 Tahun</option>
                        <option value="">2 Tahun</option>
                        <option value="">3 Tahun</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="type">Tipe Produk</label>
                    <select name="type" id="type" class="form-control" >
                        <option value="">CSI11</option>
                        <option value="">CSI12</option>
                        <option value="">CSI21</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="sn">Serial Number</label>
                    <input id="sn" name="sn" type="file" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light m-r-30">Save</button>
            <button type="reset" class="btn btn-warning waves-effect waves-light m-r-30">Clear</button>
        </form>
    </div>
</div>