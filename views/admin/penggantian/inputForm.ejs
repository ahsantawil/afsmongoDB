<form class="" method="POST">
    <div class="form-row">
        <div class="col-md-4">
            <div class="position-relative form-group">
                <label for="uiw" class="">UIW/UID</label>
                <select name="uiw" id="uiw" class="form-control" required> 
                    <option selected>Choose...</option>
                      <option value="1">UID Banten</option>
                      <option value="2">UID Disjaya</option>
                      <option value="3">UID Jabar</option>
                      <option value="4">UID Lampung</option>
                      <option value="5">UID Jateng</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="position-relative form-group">
                <label for="area" class="">Area</label>
                <select name="area" id="area" class="form-control" required> 
                    <option selected>Choose...</option>
                      <option value="1">Banten Selatan</option>
                      <option value="2">Banten Utara</option>
                      <option value="3">Teluk Naga</option>
                      <option value="4">Cikokol</option>
                      <option value="5">Cikupa</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="position-relative form-group">
                <label for="tglKirim" class="">Tanggal Kirim</label>
                <input name="tglKirim" id="tglKirim" placeholder="Nomor SPB" type="date"                                                          class="form-control" required>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4">
            <div class="position-relative form-group">
                <label for="noDo" class="">Nomor DO</label>
                <input name="noDo" id="noDo" type="text" class="form-control" placeholder="Input Nomor DO" required>
            </div>
        </div>
        <div class="col-md-4">
            <div class="position-relative form-group">
                <label for="qtyGanti" class="">Qty Penggantian</label>
                <input name="qtyGanti" id="qtyGanti" type="number" class="form-control" required>
            </div>
        </div>
        <div class="col-md-4">
            <div class="position-relative form-group">
                <label for="tipe" class="">Type</label>
                <select name="tipe" id="tipe" class="form-control" required> 
                    <option selected>Choose...</option>
                      <option value="1">CSI-01</option>
                      <option value="2">CSI-11</option>
                      <option value="3">CSI-21</option>
                      <option value="4">CSI-12</option>
                      <option value="5">P12A4</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4">
            <div class="position-relative form-group">
                <label for="nomorSN" class="">Nomor SN</label>
                <input name="nomorSN" id="nomorSN" type="file" class="form-control" required>
            </div>
        </div>
    </div>
    <button type="submit" class="mt-2 btn btn-primary">Save</button>
    <button type="reset" class="mt-2 btn btn-warning">Clear</button>
</form>
