<div class="card-block">
    <!-- Row start -->
    <div class="row">
        <div class="col-lg-12">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs  tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#addDoc" role="tab"><i class="fas fa-plus"></i> Add Document</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#dataDoc" role="tab"><i class="fas fa-folder-open"></i> Data Document</a>
                </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content tabs">
                <div class="tab-pane active" id="addDoc" role="tabpanel">
                    <div class="dropdown-divider"></div>
                    <form action="" method="">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="uiw">UIW/UID</label>
                                <select name="uiw" id="uiw" class="form-control" id="uiw" onchange="showDiv(this)">
                                    <option selected>Choose..</option>
                                    <% for(let i=0; i< uiw.length; i++) { %>
                                        <option value="<%= uiw[i].uiw %>">
                                            <%= uiw[i].uiw %>
                                        </option>
                                    <% } %>
                                </select>
                            </div>
                            <script>
                            function showDiv(elem){
                                if(elem.value >= '1')
                                document.getElementById('area').style.display="block";
                                if(elem.value == '0')
                                document.getElementById('area').style.display= "node";
                            }
                            </script>
                            <div class="form-group col-md-6" id="area" style="display: none;">
                                <label for="area">UP3/Area</label>
                                <select name="area" id="area" class="form-control">
                                    <option selected>Choose..</option>
                                    <% for(let i=0; i< area.length; i++) { %>
                                        <option value="<%= area[i].area %>">
                                            <%= area[i].area %>
                                        </option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="no_surat">Nomor Surat</label>
                                <input type="text" class="form-control" name="no_surat" id="no_surat" placeholder="Masukan Nomor Surat">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="name_doc">Nama Surat</label>
                                <input type="text" class="form-control" name="name_doc" id="name_doc" placeholder="Masukan Nama Dokumen">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="document">documentument</label>
                                <input type="file" class="form-control" id="document" name="document">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-warning">Clear</button>
                    </form>
                </div>
                <div class="tab-pane" id="dataDoc" role="tabpanel">
                    <div class="dropdown-divider"></div>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Nomor Surat</th>
                                    <th>Nama Document</th>
                                    <th>UIW/UID</th>
                                    <th>UP3/Area</th>
                                    <th>Document</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i< document.length; i++) { %>
                                    <tr>
                                        <td><%= i+1 %></td>
                                        <td><%= document[i].no_surat %></td>
                                        <td><%= document[i].name_doc %></td>
                                        <td><%= document[i].uiw %></td>
                                        <td><%= document[i].area %></td>
                                        <td><%= document[i].document %></td>
                                        <td>
                                            <a href="#" class="btn btn-success btn-sm"><i class="fas fa-file-download"></i></a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Row end -->
</div>