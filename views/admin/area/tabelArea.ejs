<div class="main-card mb-3 card">
    <div class="card-body">
        <form class="form-inline" action="/admin/area" method="POST">
            <div class="mb-4 mr-sm-4 mb-sm-0 position-relative form-group">
                <label for="area" class="mr-sm-2">UP3/AREA</label>
                <input type="text" name="area" id="area" placeholder="Enter Area" class="form-control">
            </div>
            <div class="mb-4 mr-sm-4 mb-sm-0 position-relative form-group">
                <label for="uiw" class="mr-sm-2">UIW/UID</label>
                <select class="form-control" name="uiw" id="uiw">
                    <option value="">Choose ..</option>
                    <% for(let i = 0; i< uid.length; i++) { %>
                        <option value="<%= uid[i].uiw %>"><%= uid[i].uiw %></option>
                    <% } %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>UIW/UID</th>
                        <th>UP3/AREA</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(i=0; i< area.length; i++) { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= area[i].uiw %></td>
                            <td><%= area[i].area %></td>
                            <td>
                                <form action="/admin/area/<%= area[i].id %>?_method=DELETE" method="POST">
                                    <a href="javascript:void()"class="btn btn-warning btn-sm button-update" 
                                        data-id="<%= area[i].id %>" data-area="<%= area[i].area %>"
                                        data-uiw="<%= area[i].uiw %>"><i class="fas fa-edit"></i> </a>
                                    <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>